<div class="container-fluid">
<div class="w-100 h-25 d-flex justify-content-between align-items-center" style="background-color:#f0efef;">
    <div class="texts">
        <h1 class="mt-4 m-lg-2">Send <span class="text-danger">flowers</span> like <br> you mean it</h1>
    </div>
    <img class=" w-25 h-25 m-lg-2" src="https://st4.depositphotos.com/13324256/24293/i/450/depositphotos_242930906-stock-photo-top-view-red-tulip-flowers.jpg" alt="">
</div>
</div>
<div class="container-fluid d-flex justify-content-center align-items-center">
<h1 class="mt-5 mb-5">Zara <span class="text-danger">flowers</span></h1>
</div>
{{#if products.length}}
<div class="container">
   
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each products}}
        <div class="col-md-4">
            <div class="card mb-4 box-shadow" style="background-color: #f0efef;">
                <img class="card-img-top" src="{{image}}" data-holder-rendered="true">
                <div class="card-body">
                    <h2 class="card-text fw-bold">{{title}}</h2>
                      <p>{{formatDate createdAt}}</p>
                    <div class="d-flex justify-content-between align-items-center">                         
                        <div class="btn-group">
                            <a href="/about/{{_id}}"><button type="button" class="btn btn-sm btn-outline-secondary">About</button></a>
                            {{#if @root.token}}
                            {{#ifequal user @root.userId}}                            
                            <a href="/update/{{_id}}"><button type="button" class="btn btn-sm btn-outline-secondary">Edit</button></a>
                           <form action="/delete-product/{{_id}}" method="post"> 
                           <button type="submit" class="btn btn-sm btn-outline-secondary">Delete</button>
                           </form>
                           {{/ifequal}}
                            {{/if}}
                        </div>
                        <small class="text-muted">
                            <p class="fw-bold">{{number}}. ta</p>
                        </small>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{else}}

{{/if}}