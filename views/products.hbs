{{#if myproducts.length}}
<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each myproducts}}
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="{{image}}" data-holder-rendered="true">
                <div class="card-body">
                    <h2 class="card-text fw-bold">{{title}}</h2>
                    <p class="card-text">{{description}}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex justify-content-between align-items-center gap-2">
                           <div class="avatar bg-primary" style="width: 50px; height: 50px; display: flex; justify-content: center; 
                           align-items: center;  border-radius: 100%; color: #fff; text-transform: capitalize;">
                           <p style="margin: 0; padding: 0;letter-spacing: 2px; font-size: 20px;">
                            {{GetFirstLetter user.firstname user.lastname}}</p>                          
                        </div>
                        <p class="m-0 p-0">{{user.firstname}} {{user.lastname}}</p>                                                                           
                        </div>
                        <small class="text-muted">
                             <a href="/about/{{_id}}"> <button type="button" class="btn btn-sm btn-outline-secondary">About</button></a>
                            <p class="fw-bold">{{number}}. ta</p>
                        </small>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{else}}
<h1 class="container"> Not products yet</h1>
{{/if}}